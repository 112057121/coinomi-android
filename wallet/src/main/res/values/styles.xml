<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/CustomActionBar</item>
    </style>

    <style name="CustomActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <!-- TODO add foreground colors -->
        <!--<item name="android:background">#ffff8900</item>-->
    </style>

    <style name="NoTitleBar" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
    </style>


    <!-- Special Button styles -->
    <style name="LinkButton" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/primary_500</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>


    <!-- Generic text styles -->
    <style name="NormalText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/gray_87_text</item>
    </style>

    <style name="SecondaryText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/gray_54_sec_text_icons</item>
    </style>

    <style name="SmallHelpText" parent="SecondaryText">
        <item name="android:textSize">@dimen/caption</item>
    </style>

    <style name="ErrorText" parent="">
        <item name="android:textColor">@color/fg_error</item>
    </style>

    <style name="AmountSymbol" parent="SecondaryText">
        <item name="android:singleLine">true</item>
    </style>

    <!-- Widget amount style -->
    <style name="Amount" parent="NormalText">
        <item name="android:textSize">@dimen/amount_text_size</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="AmountBig" parent="Amount">
        <item name="android:textSize">@dimen/amount_text_size_big</item>
    </style>
    <style name="AmountPending" parent="Amount">
        <item name="android:textSize">@dimen/amount_pending_text_size</item>
        <item name="android:textColor">@color/gray_26_hint_text</item>
    </style>
    <style name="AmountSymbolBig" parent="SecondaryText">
        <item name="android:textSize">@dimen/amount_symbol_text_size</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Widget send output -->
    <style name="SendOutputType" parent="NormalText">
        <item name="android:textSize">@dimen/send_output_type_text_size</item>
        <item name="android:textColor">@color/primary_500</item>
    </style>
    <style name="SendOutputAmount" parent="NormalText">
        <item name="android:textSize">@dimen/send_output_amount_text_size</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="SendOutputAddress" parent="NormalText">
        <item name="android:singleLine">true</item>
    </style>

    <!-- Transaction row -->
    <style name="TxRowDate" parent="NormalText">
        <item name="android:textSize">@dimen/transaction_entry</item>
    </style>
    <style name="TxRowLabel" parent="NormalText">
        <item name="android:textSize">@dimen/transaction_entry</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="TxRowAmount" parent="NormalText">
        <item name="android:textSize">@dimen/transaction_entry</item>
    </style>

</resources>
