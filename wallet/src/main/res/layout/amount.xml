<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/pending_progress_counter_balance"
        android:layout_width="@dimen/progress_symbol_size"
        android:layout_height="@dimen/progress_symbol_size"
        android:layout_alignParentTop="true"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/amountLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/pending_progress_counter_balance"
        android:layout_toRightOf="@+id/pending_progress_counter_balance"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/amount"
                style="@style/Amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:lineSpacingMultiplier="0.9"
                tools:text="42" />

            <!--<TextView-->
            <!--android:id="@+id/amount_pending"-->
            <!--style="@style/AmountPending"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="+1.337"-->
            <!--android:layout_gravity="end" />-->
        </LinearLayout>

        <TextView
            android:id="@+id/symbol"
            style="@style/AmountSymbolBig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:includeFontPadding="false"
            tools:text="SYMBOL" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/pending_progress"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="@dimen/progress_symbol_size"
        android:layout_height="@dimen/progress_symbol_size"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/amountLayout"
        android:layout_toRightOf="@+id/amountLayout" />

</RelativeLayout>