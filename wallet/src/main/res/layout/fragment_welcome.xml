<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.coinomi.wallet.ui.WelcomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="@dimen/intro_logo_and_btn_width"
            android:layout_height="wrap_content"
            android:src="@drawable/intro_logo"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:id="@+id/imageView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/welcome_text"
            android:id="@+id/welcome_text"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp" />

        <Button
            android:layout_width="@dimen/intro_logo_and_btn_width"
            android:layout_height="wrap_content"
            android:text="@string/create_wallet"
            android:id="@+id/create_wallet"
            android:layout_below="@+id/welcome_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp" />

        <Button
            android:layout_width="@dimen/intro_logo_and_btn_width"
            android:layout_height="wrap_content"
            android:text="@string/restore_wallet"
            android:id="@+id/restore_wallet"
            android:layout_below="@+id/create_wallet"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />
    </RelativeLayout>


</FrameLayout>



