<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.WalletSendCoins">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send_coins_fragment_receiving_address_label"
            android:id="@+id/address_label"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/send_to_address"
            android:layout_below="@+id/address_label"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send_coins_fragment_scan_qr_code"
            android:id="@+id/scan_qr_code"
            android:layout_below="@+id/send_to_address"
            android:layout_alignRight="@+id/send_to_address"
            android:layout_alignEnd="@+id/send_to_address" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send_coins_fragment_amount_label"
            android:id="@+id/amount_label"
            android:layout_below="@+id/scan_qr_code"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="34dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/send_amount"
            android:layout_below="@+id/amount_label"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send_coins_fragment_button_send"
            android:id="@+id/send_confirm"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/send_to_address"
            android:layout_alignEnd="@+id/send_to_address"
            android:enabled="false" />

    </RelativeLayout>
</FrameLayout>
